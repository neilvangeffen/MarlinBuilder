opt_set X_DRIVER_TYPE "TMC2209"
opt_set Y_DRIVER_TYPE "TMC2209"
opt_set Z_DRIVER_TYPE "TMC2209"
opt_set X2_DRIVER_TYPE "TMC2209"
opt_set Y2_DRIVER_TYPE "TMC2209"
opt_set Z2_DRIVER_TYPE "TMC2209"
opt_set Z3_DRIVER_TYPE "TMC2209"
opt_set E0_DRIVER_TYPE "TMC2209"
opt_set E1_DRIVER_TYPE "TMC2209"
opt_set E2_DRIVER_TYPE "TMC2209"
opt_set E3_DRIVER_TYPE "TMC2209"
opt_set E4_DRIVER_TYPE "TMC2209"
opt_set E5_DRIVER_TYPE "TMC2209"
opt_disable X2_DRIVER_TYPE Y2_DRIVER_TYPE Z2_DRIVER_TYPE Z3_DRIVER_TYPE E1_DRIVER_TYPE E2_DRIVER_TYPE E3_DRIVER_TYPE E4_DRIVER_TYPE E5_DRIVER_TYPE

# These are really TMC2209 values, but for CNC machines
opt_set HOLD_MULTIPLIER 0.8
opt_set X_CURRENT 900
opt_set Y_CURRENT 900
opt_set Z_CURRENT 900
opt_set X2_CURRENT 900
opt_set Y2_CURRENT 900
opt_set Z2_CURRENT 900

# Stall sensitivity values are driver specific.
# These will only be used when sensorless homing is also enabled
# TMC2209: 0...255, 0 being the most insentive
opt_set X_STALL_SENSITIVITY "50"
opt_set X2_STALL_SENSITIVITY X_STALL_SENSITIVITY
opt_set Y_STALL_SENSITIVITY "50"
opt_set Y2_STALL_SENSITIVITY Y_STALL_SENSITIVITY
opt_set Z_STALL_SENSITIVITY "40"
opt_set Z2_STALL_SENSITIVITY Z_STALL_SENSITIVITY

opt_enable \
    MONITOR_DRIVER_STATUS \
    SQUARE_WAVE_STEPPING \
    TMC_DEBUG

echo "- Configured for TMC2209" >> README.md

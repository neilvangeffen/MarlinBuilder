opt_set X2_USE_ENDSTOP "_XMAX_"
opt_set Y2_USE_ENDSTOP "_YMAX_"

opt_enable \
    MIN_SOFTWARE_ENDSTOPS \
    SOFT_ENDSTOPS_MENU_ITEM \
    USE_XMAX_PLUG \
    USE_YMAX_PLUG \
    X_DUAL_STEPPER_DRIVERS \
    X_DUAL_ENDSTOPS \
    Y_DUAL_STEPPER_DRIVERS \
    Y_DUAL_ENDSTOPS \
		X2_DRIVER_TYPE \
		Y2_DRIVER_TYPE

opt_disable \
	Z_MIN_PROBE_USES_Z_MIN_ENDSTOP_PIN

echo "- Configured for Dual XY" >> README.md

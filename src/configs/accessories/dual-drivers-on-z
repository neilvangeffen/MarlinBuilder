opt_set Z_HOME_DIR "+1"

opt_set NUM_Z_STEPPER_DRIVERS "2"

opt_enable \
    MIN_SOFTWARE_ENDSTOPS \
    MIN_SOFTWARE_ENDSTOP_Z \
    SOFT_ENDSTOPS_MENU_ITEM \
    USE_XMAX_PLUG \
    USE_YMAX_PLUG \
    USE_ZMAX_PLUG \
    Z_MULTI_ENDSTOPS

opt_disable \
	Z_MIN_PROBE_USES_Z_MIN_ENDSTOP_PIN

echo "- Configured for Dual Z" >> README.md
